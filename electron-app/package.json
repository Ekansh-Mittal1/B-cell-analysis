{
  "name": "bcr-analysis",
  "version": "1.0.0",
  "description": "B-Cell Repertoire Analysis Tool",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:preload\" \"npm run dev:renderer\" \"wait-on dist/main/index.js dist/preload/index.js http://localhost:5173 && npm run start\"",
    "dev:main": "tsc -p tsconfig.main.json --watch",
    "dev:preload": "tsc -p tsconfig.preload.json --watch",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "preview": "npm run build && electron .",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@tsconfig/svelte": "^5.0.2",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "svelte": "^4.2.8",
    "svelte-check": "^3.6.2",
    "svelte-preprocess": "^6.0.3",
    "typescript": "^5.3.2",
    "vite": "^5.0.6",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.bcr-analysis.app",
    "productName": "B-Cell Repertoire Analysis",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "static/**/*"
    ],
    "extraResources": [
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "**/*",
          "!__pycache__/**"
        ]
      },
      {
        "from": "../geneGUI/bin",
        "to": "bin"
      },
      {
        "from": "../geneGUI/data",
        "to": "data"
      }
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "static/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "static/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Science"
    }
  }
}
